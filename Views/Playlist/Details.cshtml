@model supmusic.Controllers.PlaylistDetails

@{
    ViewData["Title"] = "Playlist details Page";
}

<div class="text-center">
    <div class="d-flex justify-content-center align-items-center">
        <h1 class="display-4">Playlist Details - @Html.DisplayFor(model => model.Playlist.Name)</h1>
    </div>
    <div class="d-flex w-100 mt-5">
        <input id="searchSongInput" type="text" class="form-control" placeholder="Search songs">
        <button type="button" onclick="searchSong()" class="btn btn-primary">Search</button>
    </div>
    <div id="songsWrapper" class="row mt-5">
        @Html.AntiForgeryToken()
    </div>
    <div class="row">
        <div class="col">
            <ul class="list-group">
                @if (!Model.Songs.Any())
                {
                    <div class="alert alert-primary" role="alert">
                        No song found
                    </div>
                }
                
                @foreach (var item in Model.Songs)
                {
                    <li class="list-group-item">
                        <div class="d-flex justify-content-between align-items-center">
                            <p class="mb-0">@Html.DisplayFor(model => item.Song.Name)</p>
                            <div class="d-flex">
                                <button onclick='playSong("@item.Song.Path")' class="btn btn-success me-1">Play</button>
                                <form asp-controller="Playlist" asp-action="DeleteSong" asp-route-id="@item.Playlist.ID" method="post">
                                    <input type="text" id="playlistSongId" name="playlistSongId" value="@item.Id" hidden="hidden">
                                    <button type="submit" class="btn btn-danger">Delete</button>
                                </form>
                            </div>
                        </div>
                    </li>
                }
            </ul>
        </div>
    </div>
</div>

<script>
function searchSong() {
    const inputVal = $("#searchSongInput").val();
    const request = $.ajax({
       type: 'GET',
       url : window.location.origin + '/Playlist/SearchSong?name=' + inputVal,
    });
    request.done(function (response) {
        const playlistId = @Model.Playlist.ID;
        const csrfToken = $('input[name="__RequestVerificationToken"]').val();
        
        response.forEach(function (song) {
            $('#songsWrapper').append(`
                <div class="col-auto mb-3">
                    <div class="card" style="width: 18rem;">
                        <img height="200px" width="auto" src="https://source.unsplash.com/random" class="card-img-top" alt="song cover">
                        <div class="card-body">
                            <h5 class="card-title">
                                ${song.name}
                            </h5>
                            <p class="card-text">${song.path}</p>
                            <div class="d-flex">
                                <button onclick='playSong("${song.path}")' class="btn btn-success me-1">Play</button>
                                <form action="/Playlist/AddSong/${playlistId}" method="post">
                                    <input name="__RequestVerificationToken" type="hidden" value="${csrfToken}" />
                                    <input type="text" id="songId" name="songId" value="${song.id}" hidden>
                                    <button type="submit" class="btn btn-primary">Add</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            `);
        });
    });
}
</script>
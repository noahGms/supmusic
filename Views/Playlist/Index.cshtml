@model IEnumerable<Playlist>

@{
    ViewData["Title"] = "Playlist Page";
}

<div class="text-center">
    <div class="d-flex justify-content-center align-items-center">
        <h1 class="display-4">My playlists</h1>
        <a class="btn btn-primary ms-2" asp-controller="Playlist" asp-action="Create">Create playlist</a>
    </div>
</div>

<ul class="list-group mt-5">
    @if (!Model.Any())
    {
        <div class="alert alert-primary" role="alert">
            No playlist found
        </div>
    }
    
    @foreach (var playlist in Model)
    {
        <li class="list-group-item">
            <div class="d-flex justify-content-between align-items-center">
                <p class="mb-0">@Html.DisplayFor(modelItem => playlist.Name)</p>
                <div class="d-flex">
                    <a class="btn btn-primary me-1" asp-action="Details" asp-route-id="@playlist.ID">Details</a>
                    <form asp-controller="Playlist" asp-action="Delete" asp-route-Id="@playlist.ID">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </div>
            </div>
        </li>
    }
</ul>